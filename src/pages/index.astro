---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Welcome to Astro.">
  <header class="h-screen md:container mx-auto flex items-center">
    <h1 class="text-9xl text-gradient font-extrabold animate-gradient">
      Fullstack<br /><span class="ml-16">Developer</span>
    </h1>
  </header>
  <Footer />
</Layout>

<style>
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>
